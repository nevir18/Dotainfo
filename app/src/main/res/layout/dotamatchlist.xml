<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#222222"
    >


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="336dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        app:cardElevation="8dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="311dp"
            android:layout_toRightOf="@+id/image"
            android:background="#000000"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="93dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/dotamap"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/matchid1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="18dp"
                    android:paddingLeft="8dp"
                    android:text="MATCH ID:"
                    android:textColor="#ffffff"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/matchid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_alignTop="@+id/matchid1"
                    android:layout_toEndOf="@+id/matchid1"
                    android:paddingLeft="8dp"
                    android:text="matchid"
                    android:textColor="#ffffff" />

                <TextView
                    android:id="@+id/duration1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_alignParentBottom="true"

                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="18dp"
                    android:paddingLeft="8dp"
                    android:text="DURATION:"
                    android:textColor="#ffffff"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/duration1"
                    android:layout_toEndOf="@+id/duration1"
                    android:paddingLeft="8dp"
                    android:text="duration"
                    android:textColor="#ffffff" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="219dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/winnerlogo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />

                <TextView
                    android:id="@+id/radiantteamid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="65dp"
                    android:paddingLeft="8dp"

                    android:text="radiantteamid"
                    android:textColor="#ffffff" />

                <TextView
                    android:id="@+id/radiantname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="39dp"
                    android:paddingLeft="8dp"

                    android:text="radiantname"
                    android:textColor="	#ffffff" />


                <TextView
                    android:id="@+id/radiantscore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="13dp"
                    android:paddingLeft="8dp"
                    android:text="radiantscore"
                    android:textColor="	#ffffff" />


                <TextView
                    android:id="@+id/direteamid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="32dp"
                    android:paddingLeft="8dp"
                    android:text="direteamid"
                    android:textColor="#ffffff" />

                <TextView
                    android:id="@+id/direname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="59dp"
                    android:paddingLeft="8dp"
                    android:text="direname"
                    android:textColor="#ffffff" />

                <TextView
                    android:id="@+id/direscore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="86dp"
                    android:paddingLeft="8dp"
                    android:text="direscore"
                    android:textColor="#ffffff" />
            </RelativeLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
